<?xml version="1.0" encoding="utf-8"?>
<!--叠加的效果  两个shape的叠加 -->

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle"
            android:dither="true">
            <corners android:radius="2dp"/>
            <stroke
                android:width="2dp"
                android:color="#ff0000" />

        </shape>
    </item>

    <item
        android:top="10dp"
        android:bottom="12dp"
        >
        <shape
            android:shape="rectangle"
            android:dither="true">
            <corners android:radius="2dp"/>
            <solid android:color="#00ff00"/>
        </shape>
    </item>
    <item
        android:right="10dp"
        android:left="10dp"
        android:top="20dp"
        android:bottom="22dp"
        >
        <shape
            android:shape="rectangle"
            android:dither="true">
            <corners android:radius="2dp"/>
            <solid android:color="#FFff00"/>
        </shape>
    </item>

</layer-list>